{
  "name": "preact-starter",
  "description": "Starter application with Preact, Atom, LESS modules and Babel.",
  "private": true,
  "author": "Adrian Unger",
  "version": "0.2.0",
  "repository": "",
  "scripts": {
    "watch": "sane 'npm run build' app --glob='**/*.js'",
    "serve": "browser-sync start -s public -f public --reload-delay 1",
    "start": "run-p watch serve",
    "test": "npm run std",
    "std": "standard --verbose | snazzy",
    "copy": "mkdir -p public && cp -r app/assets/ public/",
    "prebuild": "npm run copy",
    "build": "browserify app/index.js -o public/app.js",
    "postbuild": "cp public/index.html public/200.html",
    "prebuild:prod": "npm run copy",
    "build:prod": "browserify app/index.js -p bundle-collapser/plugin -p common-shakeify -t babelify -g uglifyify | uglifyjs -o public/app.js",
    "postbuild:prod": "cp public/index.html public/200.html"
  },
  "dependencies": {
    "atom-lens-reducer": "0.2.0",
    "check-arg-types": "1.1.0",
    "classless-component": "0.1.0",
    "preact": "8.2.6",
    "preact-portal": "1.1.2",
    "preact-router": "2.6.0",
    "query-string": "5.0.1",
    "redux": "3.7.2",
    "throttle-debounce": "1.0.1",
    "wasmuth": "1.4.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-core": "^6.26.0",
    "babel-plugin-jsx-import": "staydecent/babel-plugin-jsx-import",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-transform-es2015-spread": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24",
    "babelify": "^8.0.0",
    "browser-sync": "^2.18.13",
    "browserify": "^14.5.0",
    "bundle-collapser": "^1.3.0",
    "common-shakeify": "^0.4.5",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.1.1",
    "postcss-less-engine": "^0.6.2",
    "redux-devtools-extension": "2.13.2",
    "sane": "^2.2.0",
    "snazzy": "^7.0.0",
    "split-require": "^2.0.3",
    "standard": "^10.0.3",
    "uglifyify": "^4.0.5",
    "uglifyjs": "^2.4.11"
  },
  "engines": {
    "npm": ">=3.0.0",
    "node": ">=6.0.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "standard": {
    "globals": [
      "Preact"
    ],
    "ignore": [
      "build"
    ]
  }
}
